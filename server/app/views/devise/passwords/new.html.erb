<h1 class="sr-only">Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-12">
    <%= f.label :email, class: 'sr-only'%>
    <%= f.email_field :email,
      placeholder: 'email',
      autofocus: true,
      autocomplete: 'email',
      class: 'w-full border-b-2 border-primary'
    %>
  </div>

  <div class="mb-10">
    <%= f.submit "reset password",
      class: 'block w-full px-4 py-1 bg-primary text-white cursor-pointer whitespace-normal'
    %>
  </div>

  <div class="text-center text-xs text-primary">
    <%= render 'devise/shared/links' %>
  </div>
<% end %>
